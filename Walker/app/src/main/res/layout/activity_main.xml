<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@mipmap/main_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <!--android:background="@mipmap/step_bg"-->

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_trail"
            android:layout_alignParentRight="true"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="38dp"
            android:drawableLeft="@mipmap/check_history_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="Check History"
            android:textColor="#333333" />

        <com.example.walker.view.StepArcView
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="247dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp" />

        <TextView
            android:id="@+id/tv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_trail"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginBottom="38dp"
            android:drawableLeft="@mipmap/set_alert_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="Set Alert"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_isSupport"
            android:layout_width="143dp"
            android:layout_height="29dp"
            android:layout_below="@+id/cc"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="134dp"
            android:gravity="center"
            android:text="counting..."
            android:textColor="#333333" />

        <com.example.walker.view.KiloView
            android:id="@+id/dd"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_isSupport"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="0dp" />

        <Button
            android:id="@+id/bt_trail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Check Trail"
            android:onClick="onClick"
            android:background="@mipmap/btn_trail_bg"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>